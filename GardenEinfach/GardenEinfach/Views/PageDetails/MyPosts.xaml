                                    </StackLayout>

                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                        <CollectionView.Footer>
                            <Grid HeightRequest="0"/>
                        </CollectionView.Footer>
                    </CollectionView>-->
                </StackLayout>
            </Grid>
        </Grid>
    </RefreshView>
</ContentPage>